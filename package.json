{
  "name": "root",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "release": "nx run root:release",
    "build": "npx tsdown --cwd tools/nx-tsdown && npx tsdown --cwd tools/nx-tsgo && npx tsdown --cwd tools/nx-vitest && npx tsdown --cwd tools/nx-release"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/devkit": "21.6.3",
    "@nx/eslint": "21.6.3",
    "@nx/eslint-plugin": "21.6.3",
    "@nx/js": "21.6.3",
    "@types/node": "24.6.2",
    "@typescript/native-preview": "^7.0.0-dev.20251004.1",
    "@vitest/coverage-v8": "^3.2.4 ",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.8",
    "execa": "^9.6.0",
    "jiti": "2.6.1",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.6.3",
    "prettier": "^2.6.2",
    "tsdown": "^0.15.6",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "verdaccio": "^6.0.5",
    "vite": "^7.0.0",
    "vitest": "^3.0.0",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.13.5"
  },
  "workspaces": [
    "packages/*",
    "packages/connectors/*",
    "tools/*",
    "e2e/*"
  ],
  "nx": {
    "includedScripts": [],
    "targets": {
      "e2e": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nx test e2e-cli",
          "cwd": "{workspaceRoot}"
        }
      },
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      },
      "release": {
        "executor": "./tools/nx-release:release",
        "options": {
          "baseBranch": "main",
          "targetBranch": "production",
          "aiProvider": "anygpt",
          "autoMerge": true
        }
      },
      "pr-update": {
        "executor": "./tools/nx-release:pr-update",
        "options": {
          "baseBranch": "main",
          "targetBranch": "production",
          "aiProvider": "anygpt"
        }
      }
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2"
  }
}
