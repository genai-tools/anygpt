{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@root/source"],
    "paths": {
      "@anygpt/cli": ["./packages/cli/src"],
      "@anygpt/ai-provider": ["./packages/ai-provider/src"],
      "@anygpt/claude-agent": ["./packages/connectors/claude-agent/src"],
      "@anygpt/config": ["./packages/config/src"],
      "@anygpt/docker-mcp-plugin": ["./packages/plugins/docker-mcp/src"],
      "@anygpt/mcp": ["./packages/mcp/src"],
      "@anygpt/mcp-discovery": ["./packages/mcp-discovery/src"],
      "@anygpt/mcp-discovery-server": ["./packages/mcp-discovery-server/src"],
      "@anygpt/mock": ["./packages/connectors/mock/src"],
      "@anygpt/openai": ["./packages/connectors/openai/src"],
      "@anygpt/router": ["./packages/router/src"],
      "@anygpt/rules": ["./packages/rules/src"],
      "@anygpt/types": ["./packages/types/src"]
    }
  }
}
